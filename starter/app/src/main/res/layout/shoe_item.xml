<?xml version="1.0" encoding="utf-8"?>
<!--
    - Shoe Item
    - Listing the Shoe Item and can scroll if many shoe
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/shoe_item_padding">

    <ImageView
        android:id="@+id/shoe_image"
        android:layout_width="@dimen/shoe_place_holder"
        android:layout_height="@dimen/shoe_place_holder"
        android:contentDescription="@string/shoe_image"
        android:src="@drawable/logo" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/shoe_detail_margin_left"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/shoe_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/shoe_name_text_size"
            android:textStyle="bold"
            tool:text="Shoe Name" />

        <TextView
            android:id="@+id/shoe_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/shoe_detail_text_size"
            tool:text="Shoe Company" />

        <TextView
            android:id="@+id/shoe_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/shoe_detail_text_size"
            tool:text="Shoe Size" />

        <TextView
            android:id="@+id/shoe_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/shoe_detail_text_size"
            tool:text="Shoe Description" />

    </LinearLayout>

</LinearLayout>